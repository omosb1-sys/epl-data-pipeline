            "args": [
                "-y",
                "@penpot/mcp-server@latest"
            ],
            "env": {
                "PENPOT_ACCESS_TOKEN": "your-penpot-access-token-here",
                "PENPOT_BASE_URL": "https://design.penpot.app"
            }
        }
    }
}